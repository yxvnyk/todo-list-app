@model (IEnumerable<TagDTO> List, string url)
@{
    Layout = "_TaskLayout";
}
<div class="container">
    <h3 class="text-black text-center p-1">All tags from to-do lists</h3>
    @if (Model.List == null)
    {
        <div class="d-flex justify-content-center">
            <div class="my-3 p-3 rounded shadow-sm bg-dark bg-opacity-10">
                There are no tags in tasks you have access to.
            </div>
        </div>

    }
    else{
    @foreach (TagDTO tag in Model.List)
    {
        
        <div class="my-3 p-3 rounded shadow-sm bg-dark bg-opacity-10">
            <div class="dropdown">
                <a class="btn btn-secondary"
                    asp-action="GetAllTasksByTag" asp-controller="Task" asp-route-tag="@tag.Name"  type="button" >
                    @tag.Name
                </a>
                    @* <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"> *@
                    @*     @tag.Name *@
                    @* </button> *@
                    @* <ul class="dropdown-menu"> *@
                    @*     <li><a class="dropdown-item" asp-action="GetAllTasksByTag" asp-controller="Task" asp-route-tag="@tag.Name">Action</a></li> *@
                    @* </ul> *@
            </div>
            
        </div>

    }
    }
    <div class="form-group mt-3 text-center">

        <a class="btn btn-primary" type="submit" href="@Model.url">Back</a>
    </div>
</div>  