@model TodoListEditorViewModel
@{
    TodoListDTO? todoList = Model.List;
}

<h3 class="bg-@Model.ThemeColor text-white text-center p-1">@Model.Title a To-do list</h3>
<div class="row">
    <div class="col-md-4">
       
        <form asp-action="@Model.CallbackMethodName" asp-controller="TodoList" asp-route-id="@todoList?.Id != 0 ? todoList?.Id : null)" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (todoList?.Id != 0)
            {
                <div class="form-group">
                    <label asp-for="List.Id" class="control-label"></label>
                    <input asp-for="List.Id" class="form-control" readonly />
                </div>

            }
            @if (todoList?.Id == 0)
            {
                <input type="hidden" asp-for="List.UserId" value="@todoList?.UserId" />
            }
            <div class="form-group">
                <label asp-for="List.Title" class="control-label"></label>
                <input asp-for="List.Title" class="form-control" />
                <span asp-validation-for="List.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="List.Description" class="control-label"></label>
                <input asp-for="List.Description" class="form-control" />
                <span asp-validation-for="List.Description" class="text-danger"></span>
            </div>
          
            
            <div class="form-group mt-3 text-center">
                <button type="submit" class="btn btn-success">
                    Save
                </button>
                <a class="btn btn-primary" type="submit" href="@Model.ReturnUrl">Back</a>
            </div>
            <div class="form-group mt-3 text-center">
               
            </div>
            
        </form>
    </div>
</div>
