@{
    Layout = "_MinimalLayout";
}
<style>
    .centered-form {
        position: absolute;
        top: 48%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 400px;
        width: 100%;
    }
</style>
<div class="centered-form">
    <main class="form-signin">
    <form asp-action="Register" asp-controller="Auth" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign-in</h1>

        <div class="form-floating">
            <input name="Username" type="text" class="form-control" id="floatingUsername" placeholder="Username">
            <label for="floatingUsername">Username</label>
        </div>
        <div class="form-floating">
            <input name="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
            <label for="floatingEmail">Email address</label>
        </div>
        <div class="form-floating">
            <input name="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <div class="d-flex">
                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault">
                    <label class="form-check-label" for="checkDefault">
                        Remember me
                    </label>
                </div>
                <div class="form-check text-start my-3">
                    <a asp-action="LogIn" asp-controller="Auth">Log-in</a>
                </div>
        </div>
        
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    </form>
</main>
</div>
