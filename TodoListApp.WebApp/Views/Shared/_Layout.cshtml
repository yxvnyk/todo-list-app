<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>To-do app</title>
    <link href="/lib/bootstrap-5.2.3-dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            overflow: hidden;
        }

        .sidebar-wrapper {
            display: flex;
            flex-direction: column;
            height: calc(100vh - 112px); /* учитываем высоту header */
        }

        .sidebar {
            display: flex;
            flex-direction: column;
            width: 380px;
            height: 100%;
            overflow: hidden;
        }

        .sidebar-container {
            flex-grow: 1;
            overflow-y: auto;
        }

        .main-content {
            flex-grow: 1;
            overflow: auto;
        }

        /* Toggle sidebar visibility via checkbox */
        #sidebarToggle:checked ~ .wrapper main .sidebar-wrapper .sidebar {
            display: none !important;
        }

        #sidebarToggle:checked ~ .wrapper main .main-content {
            flex-grow: 1;
            margin-left: 0;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 250px;
        }

        }

        @@media (max-width: 576px) {
            .sidebar

        {
            display: none;
        }

        .main-content {
            margin-left: 0;
        }

        }
    </style>
</head>
<body>
    <input type="checkbox" id="sidebarToggle" hidden />

    <div class="wrapper">
        <!-- HEADER -->
        <header>
            @* <div class="bg-primary text-white p-2"> *@
            @*     <div class="container-fluid"> *@
            @*         <div class="row"> *@
            @*             <div class="col navbar-brand">Todo Application</div> *@
            @*             <div class="col-6 text-end"> *@
            @*                 <vc:cart-summary /> *@
            @*             </div> *@
            @*         </div> *@
            @*     </div> *@
            @* </div> *@
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-action="Index" asp-controller="Home">To-do list app</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Tag" asp-action="TagMenu" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">Tags</a>
                            </li>
                           
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- MAIN -->
        <main>
            <!-- SIDEBAR -->
            <div class="sidebar-wrapper">
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    
                </div>
                <div class="sidebar bg-dark text-white d-flex flex-column align-items-stretch flex-shrink-0">
                    
                    
                    <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom shadow-sm mb-3">
                        <div class="container">
                            <a class="navbar-brand text-white">List group</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="btn btn-light btn-sm" asp-controller="TodoList" asp-action="Create" asp-route-id="admin" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
                                                New to-do list
                                            </a>
                                        </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <div class="sidebar-container list-group list-group-flush border-bottom">
                        
                            @await Component.InvokeAsync("ListsSideBar")
                    </div>
                </div>
            </div>

            <!-- MAIN CONTENT -->
            <div class="main-content m-1 p-1">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <partial name="_ValidationScriptsPartial"/>
</body>
</html>
