<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>To-do app</title>
    <link href="/lib/bootstrap-5.2.3-dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            overflow: hidden;
        }

        .sidebar-wrapper {
            display: flex;
            flex-direction: column;
            height: calc(100vh - 112px); /* учитываем высоту header */
        }

        .sidebar {
            display: flex;
            flex-direction: column;
            width: 380px;
            height: 107%;
            overflow: hidden;
        }

        .sidebar-container {
            flex-grow: 1;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .main-content {
            flex-grow: 1;
            overflow: auto;
        }

        /* Toggle sidebar visibility via checkbox */
        #sidebarToggle:checked ~ .wrapper main .sidebar-wrapper .sidebar {
            display: none !important;
        }

        #sidebarToggle:checked ~ .wrapper main .main-content {
            flex-grow: 1;
            margin-left: 0;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 200px;
        }

        }

        @@media (max-width: 576px) {
            .sidebar

        {
            display: none;
        }

        .main-content {
            margin-left: 0;
        }

        }
    </style>
</head>
<body>
    <input type="checkbox" id="sidebarToggle" hidden />

    <div class="wrapper">
        <!-- HEADER -->
        <header>
            <partial name="_Navbar" />
        </header>

        <!-- MAIN -->
        <main>
            <!-- SIDEBAR -->
            <div class="sidebar-wrapper">
                
                <div class="sidebar bg-dark text-white d-flex flex-column align-items-stretch flex-shrink-0">
                        
                            @await Component.InvokeAsync("ListsSideBar")
                </div>
            </div>

            <!-- MAIN CONTENT -->
            <div class="main-content m-1 p-1">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <partial name="_ValidationScriptsPartial"/>
</body>
</html>
